{
    "name": "ricardopedias/freep-console",
    "type": "tool",
    "description": "Camada para linha de comando do framework Freep.",
    "keywords": ["framework", "freep", "tool", "console"],
    "license": "MIT",
    "require": {
        "php": "^8.0.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^9",
        "phpstan/phpstan": "^0.12",
        "squizlabs/php_codesniffer": "3.*",
        "phpmd/phpmd": "@stable"
    },
    "autoload": {
        "psr-4": {
            "Freep\\Console\\": "codigo/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Testes\\": "testes/"
        }
    },
    "bin": [
        "freep"
    ],
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "scripts" : {
        "testar": "vendor/bin/phpunit --testdox",
        "analisar": [
            "phpcbf --standard=PSR1,PSR12 codigo testes",
            "phpcs --standard=PSR1,PSR12 codigo testes",
            "phpmd ./codigo ansi cleancode,codesize,unusedcode,naming",
            "phpmd ./testes ansi cleancode,codesize,unusedcode,naming",
            "phpstan analyse --level=8 codigo",
            "phpstan analyse --level=8 testes"
        ]
    }
}
